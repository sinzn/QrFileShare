<!DOCTYPE html>
<html>
  <head>
    <title>File Sharing</title>
  </head>
  <body>
    <center>
      <h1>Upload Files</h1>
      <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="file" name="files" multiple required><br><br>
        <button type="submit">Upload</button>
      </form>

      <% if (links.length > 0) { %>
        <h2>Uploaded Files</h2>
        <% links.forEach(link => { %>
          <div style="margin-bottom: 20px;">
            <!-- <p><strong><%= link.originalname %></strong></p> -->
            <p>Public URL: <a href="<%= link.link %>" target="_blank"><%= link.link %></a></p>
            <p>
            </p>
            <img src="<%= link.qr %>" alt="QR Code for <%= link.originalname %>" width="150" height="150" />
          </div>
        <% }) %>
      <% } %>
    </center>
  </body>
</html>
